{
  "name": "manoj/toon-php-lite",
  "description": "Lite PHP implementation of TOON (Token-Oriented Object Notation)",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "ToonLite\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ToonLite\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpstan": "phpstan analyse"
  },
  "require": {
    "php": ">=8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-strict-rules": "^2.0"
  },
  "minimum-stability": "stable"
}
